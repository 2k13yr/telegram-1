<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/holo_edit_text_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTextView" parent="android:Widget.TextView">
        <item name="android:gravity">left</item>
    </style>

    <style name="AppListView" parent="@android:style/Widget.ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@drawable/st_list_selector</item>
        <item name="android:divider">@color/st_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:verticalScrollbarPosition">defaultPosition</item>
        <!--<item name="android:fastScrollThumbDrawable"/>-->
    </style>

    <style name="AppTheme.ScrollViewStyle"
           parent="@android:style/Widget.ScrollView">
        <item name="android:verticalScrollbarPosition">defaultPosition</item>
    </style>

    <style name="AppTheme.Theme.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/st_bar_bg</item>
        <item name="background">@drawable/st_bar_bg</item>
        <item name="android:titleTextStyle">@style/AppTheme.Theme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.Theme.ActionBar.Subtitle</item>
        <item name="titleTextStyle">@style/AppTheme.Theme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/AppTheme.Theme.ActionBar.Subtitle</item>
    </style>

    <style name="AppTheme.Theme.ActionBar.TitleTextStyle"
           parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/st_black_text</item>
    </style>

    <style name="AppTheme.Theme.ActionBar.Subtitle"
           parent="TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/st_black_text</item>
    </style>

    <style name="AppTheme.Photo.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@color/st_photo_panel</item>
        <item name="background">@color/st_photo_panel</item>
        <item name="android:titleTextStyle">@style/AppTheme.Photo.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.Photo.ActionBar.Subtitle</item>
        <item name="titleTextStyle">@style/AppTheme.Photo.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/AppTheme.Photo.ActionBar.Subtitle</item>
    </style>

    <style name="AppTheme.Photo.ActionBar.TitleTextStyle"
           parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Photo.ActionBar.Subtitle"
           parent="TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Theme" parent="Theme.Sherlock.Light">

        <item name="android:listViewStyle">@style/AppListView</item>

        <item name="android:editTextStyle">@style/AppEditText</item>

        <item name="android:textViewStyle">@style/AppTextView</item>

        <item name="android:windowBackground">@android:color/white</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:actionBarStyle">@style/AppTheme.Theme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.Theme.ActionBarStyle</item>

        <item name="android:homeAsUpIndicator">@drawable/st_bar_back</item>
        <item name="homeAsUpIndicator">@drawable/st_bar_back</item>

        <item name="android:logo">@drawable/st_bar_logo</item>
        <item name="logo">@drawable/st_bar_logo</item>

        <item name="android:popupMenuStyle">@style/PopupMenu.Stels</item>
        <item name="popupMenuStyle">@style/PopupMenu.Stels</item>

        <item name="android:dropDownListViewStyle">@style/DropDown.Stels</item>
        <item name="dropDownListViewStyle">@style/DropDown.Stels</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowContentOverlay">@null</item>

        <item name="android:scrollViewStyle">@style/AppTheme.ScrollViewStyle</item>
    </style>
    <style name="AppTheme.Photo" parent="Theme.Sherlock">
        <item name="android:windowBackground">@android:color/black</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:actionBarStyle">@style/AppTheme.Photo.ActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.Photo.ActionBarStyle</item>

        <item name="android:homeAsUpIndicator">@drawable/st_bar_back_photo</item>
        <item name="homeAsUpIndicator">@drawable/st_bar_back_photo</item>
    </style>

    <style name="DropDown.Stels" parent="Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:divider">@drawable/st_bar_menu_div</item>
    </style>

    <style name="PopupMenu.Stels" parent="Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/st_bar_menu_bg</item>
    </style>
</resources>