<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/st_settings_bg">
    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/st_black_text"
              android:gravity="center"
              android:textSize="22sp"
              android:text="Is this your number?"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="24dp"
              android:textColor="@color/st_black_text"
              android:gravity="center"
              android:textSize="26sp"
              android:text="+7-931-342-12-48"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/st_btn_green"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:text="Yes, activate account"
            android:id="@+id/confirmPhone"/>

    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/st_btn_gray"
            android:textColor="@color/st_black_text"
            android:textSize="16sp"
            android:text="No, change number"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
              android:gravity="center"
              android:textColor="@color/st_black_text"
              android:textSize="16sp"
              android:text="We will send completely free SMS for activating your account."/>

</LinearLayout>